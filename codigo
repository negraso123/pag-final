// Manejo de rutas
void handleRoot() {
  server.send(200, "text/html", htmlPage);  // P치gina principal
}

void handleLogin() {
  server.send(200, "text/html", loginPage);  // P치gina de inicio de sesi칩n
}

void handleRegister() {
  server.send(200, "text/html", registerPage);  // P치gina de registro
}

void handleCuidado() {
  server.send(200, "text/html", cuidadoPage);  // P치gina de cuidado
}

void setup() {
  Serial.begin(115200);

  // Conexi칩n a Wi-Fi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Conectando a WiFi...");
  }

  // Imprimir la IP asignada
  Serial.println();
  Serial.print("Conectado a la red WiFi. IP del servidor: ");
  Serial.println(WiFi.localIP());

  // Definir rutas
  server.on("/", handleRoot);
  server.on("/login", handleLogin);
  server.on("/register", handleRegister);
  server.on("/cuidado", handleCuidado);
  // Iniciar el servidor
  server.begin();
  Serial.println("Servidor web iniciado.");
}

void loop() {
  server.handleClient();  // Procesar solicitudes de los clientes
}

